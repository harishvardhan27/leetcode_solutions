class Solution {
    public int reverse(int x) {
        boolean negative=false;
        int result=0;
        if(x<0){
            negative =true;
            x*=-1;
        }
        while(x>0){
            int temp=x%10;
            if(result>Integer.MAX_VALUE/10) return 0;
            result=result*10+temp;
            x/=10;
        }
        if(negative) return result*(-1);
        return result;
    }
}
